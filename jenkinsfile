pipeline {
    agent any

    environment {
        IMAGE_NAME = 'chandanbr/ganesh'
    }

    stages {

        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Ganesh-Kalyanshetti/educase-CI-CD.git'
            }
        }

        stage('Docker Build') {
            steps {
                dir('my-app')
                {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:latest1")
                }
                }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'hostid') {
                        dockerImage.push('latest')
                    }
                }
            }
        }
    }
}
